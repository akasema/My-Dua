<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="About Us:"
                android:textColor="#86AD33"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="MY Dua v3.2"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#FEC606"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/tab_text_2"
                android:textColor="#1136C7"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="email|web"
                android:gravity="center"
                android:minHeight="48dp"
                android:text="For more details and Special thanks to:                                            https://www.ozgurherkul.org/, https://kuran.diyanet.gov.tr/, https://www.onlinedua.org/,  https://risaleoku.com/, https://sureyyakitap.com/sesli-kitaplar/, http://www.ortakhatim.com/cevsen/, https://risaleinur.com/risale-i-nur-collection.html,  https://fgulen.com/tr/eserleri/asrin-getirdigi-tereddutler " />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="391dp"
                android:layout_height="wrap_content"
                android:autoLink="email|web"
                android:gravity="center"
                android:minHeight="48dp"
                android:text="in any question pls send e-mail to kadirgok1@gmail.com" />

            <Button
                android:id="@+id/button2"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#FFC107"
                android:text="Dua Okumaya Devam
                 CONTINUE TO READ"
                android:textColor="#1136C7"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>