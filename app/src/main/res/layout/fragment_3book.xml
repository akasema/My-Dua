<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dua.MyDua.ui.main.page3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FEC606"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="KITAPLAR / BOOKS"
            android:textColor="@color/purple_500"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="98dp"
            android:layout_height="70dp"
            android:background="@drawable/kuran"
            android:gravity="center"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_marginTop="75dp"
        android:background="#7CEECE"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:background="#FEFEFE"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@drawable/risale"
                android:onClick="risale"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FEC606"
                android:gravity="center"
                android:text="RISALE"
                android:textColor="@color/purple_500"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:background="#F6F7F2"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_item2"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@drawable/pirlanta"
                android:onClick="asrin"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FEC606"
                android:gravity="center"
                android:text="PIRLANTA"
                android:textColor="@color/purple_500"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_marginTop="260dp"
        android:background="#7CEECE"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FEFEFE"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_item3"
                android:layout_width="143dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@drawable/riyazussalihin"
                android:onClick="riyazussalihin"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FEC606"
                android:gravity="center"
                android:text="RIYAZUSSALIHIN"
                android:textColor="@color/purple_500"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F6F7F2"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_item4"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@drawable/meal"
                android:onClick="meal"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FEC606"
                android:gravity="center"
                android:text="KUR'AN MEALI"
                android:textColor="@color/purple_500"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_marginTop="440dp"
        android:background="#7CEECE"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FEFEFE"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_item5"
                android:layout_width="165dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@drawable/kuanulkerim"
                android:onClick="elmali"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FEC606"
                android:gravity="center"
                android:text="ELMALILI TEFSIR"
                android:textColor="@color/purple_500"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:background="#F6F7F2"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_item6"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@drawable/ilmihal"
                android:onClick="ilmihal"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FEC606"
                android:gravity="center"
                android:text="ILMIHAL"
                android:textColor="@color/purple_500"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="628dp"
        android:background="#7CEECE"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="#FEC606"
            android:gravity="center"
            android:onClick="pirlanta"
            android:text=" SESLI KITAPLAR"
            android:textColor="@color/purple_500"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="2dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/kuran"
            android:gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="#FEC606"
            android:gravity="center"
            android:onClick="kozet"
            android:text="KITAP OZETLERI"
            android:textColor="@color/purple_500"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>